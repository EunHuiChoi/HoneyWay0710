<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_img</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="TimePicker1" parent="AppTheme">
        <item name="android:editTextStyle">@style/PickerEditText</item>
    </style>

    <style name="PickerEditText" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

</resources>
