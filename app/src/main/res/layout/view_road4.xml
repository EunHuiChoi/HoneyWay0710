<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/conLayout4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#00000000"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8">

            <ImageView
                android:id="@+id/bar01"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/circle01"
                app:srcCompat="@drawable/rectangle90" />

            <ImageView
                android:id="@+id/bar02"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/circle02"
                app:srcCompat="@drawable/rectangle90" />

            <ImageView
                android:id="@+id/bar3"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/circle03"
                app:srcCompat="@drawable/rectangle90" />

            <ImageView
                android:id="@+id/bar4"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/circle4"
                app:srcCompat="@drawable/rectangle90" />

            <ImageView
                android:id="@+id/circle01"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:id="@+id/circle02"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/bar01"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:id="@+id/circle03"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/bar02"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:id="@+id/circle4"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/bar3"
                app:srcCompat="@drawable/circle" />

            <ImageView
                android:id="@+id/circle5"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/bar4"
                app:srcCompat="@drawable/circle" />

            <TextView
                android:id="@+id/txtStation1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="39dp"
                android:text="화랑대" />

            <TextView
                android:id="@+id/txtStation2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-17dp"
                android:layout_marginTop="39dp"
                android:layout_toRightOf="@id/bar01"
                android:text="태릉입구" />

            <TextView
                android:id="@+id/txtStation3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-6dp"
                android:layout_marginTop="39dp"
                android:layout_toRightOf="@id/bar02"
                android:text="석계" />

            <TextView
                android:id="@+id/txtStation4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-11dp"
                android:layout_marginTop="39dp"
                android:layout_toRightOf="@id/bar3"
                android:text="돌곶이" />

            <TextView
                android:id="@+id/txtStation5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-7dp"
                android:layout_marginTop="39dp"
                android:layout_toRightOf="@id/bar4"
                android:text="월곡" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="20분"
            android:textColor="@color/white"
            android:textSize="30dp" />
    </LinearLayout>
</LinearLayout>